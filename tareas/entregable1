#include <iostream>

using namespace std;

int main()
{
	// 1 Declare una variable tipo int que tenga el número de materias que estás cursando actualmente.

	int numMaterias = 6;
	cout << "Tengo: " << numMaterias << " materias" << endl;

	// 2 Declare una variable tipo int que guarde el valor del cuatrimestre que estas cursando.
	int numCuatrimestre = 5;
	cout << "Estoy en: " << numCuatrimestre << "to cuatrimestre" << endl;

	// 3 Declara una variable tipo string con identificador “materia”, e inicializar con el nombre de esta materia.
	string materia = "Fundamentos de programacion";
	cout << "Esta materia es: " << materia << endl;

	// 4 Declara una variable tipo string con identificador “cuenta”, e inicializar con el tu número de cuenta / matricula del Unitec.
	string cuenta = "335002365";
	cout << "Mi numero de cuenta es: " << cuenta << endl;

	// 5 Declara una variable de tipo string con identificador “nombre”, e inicializar con tu nombre(s) propio(s).
	string nombres = "Patricio Joel";
	cout << "Mi nombre es: " << nombres << endl;

	// 6 Declara una variable de tipo string con identificador “apellidoPaterno”, e inicializar con tu apellido paterno.
	string apellidoPaterno = "Hernandez";
	cout << "Mi primer apellido es: " << apellidoPaterno << endl;

	// 7 Declara una variable de tipo string con identificador “apellidoMaterno”, e inicializar con tu apellido materno.
	string apellidoMaterno = "Garcia";
	cout << "Mi segundo apellido es: " << apellidoMaterno << endl;

	// 8 Declara una variable tipo long con identificador “celular”, e inicializar con tu número celular.
	long int celular = 5513598636;
	cout << "Mi numero de celular es: " << celular << endl;

	// 9 Declara una variable tipo long con identificador “casa”, e inicializar con tu número de casa.
	long int numCasa = 228;
	cout << "Mi numero de casa es: " << numCasa << endl;

	// 10 Declara una variable tipo string con identificador “correoQueMasUso”, e inicializar con el correo electrónico que más uses.
	string correoQueMasUso = "hernandezpatricio.167@gmail.com";
	cout << "El correo que mas uso es: " << correoQueMasUso << endl;

	// 11 Declara una variable tipo string con identificador “correMyUnitec”, e inicializar con el correo electrónico que tienes asignado en el Unitec.
	string correoMyUnitec = "patricio.hernandez35@my.unitec.edu.mx";
	cout << "Mi correo de unitec es: " << correoMyUnitec << endl;

	// 12 Declara una variable tipo string con identificador “carrera”, e inicializar con la carrera que cursas actualmente en el Unitec.
	string carrera = "Diseno, animacion y arte digital";
	cout << "La carrera que estoy cursando es: " << carrera << endl;

	// 13 Declara una variable tipo bool con identificador “blackboard”, e inicializar con valor true, si lo has usado anteriormente, de lo contrario inicializar con valor false.
	bool blackboard = true;
	cout << blackboard;

	// Errores de sintaxis 

    int numero = 0; 

}

