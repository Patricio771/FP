            // 2. Hacer un menú de opciones que ejecute las operaciones aritméticas básicas
            int numero9, numero10, total3;
            char opcion;

            do
            {
                Console.WriteLine("Menú de operaciones:");
                Console.WriteLine("a) Suma de dos operadores");
                Console.WriteLine("b) Resta de dos operadores");
                Console.WriteLine("c) Multiplicación de dos operadores");
                Console.WriteLine("d) División de dos operadores");
                Console.WriteLine("e) Residuo de dos operadores");
                Console.WriteLine("s) Salir del Menú");

                Console.WriteLine("Ingresa la opción:");
                opcion = char.Parse(Console.ReadLine());

                if (opcion != 's')
                {
                    Console.WriteLine("Dame un número:");
                    numero9 = int.Parse(Console.ReadLine());

                    Console.WriteLine("Dame otro número:");
                    numero10 = int.Parse(Console.ReadLine());

                    switch (opcion)
                    {
                        case 'a':
                            total3 = numero9 + numero10;
                            Console.WriteLine("Resultado: " + total3);
                            break;
                        case 'b':
                            total3 = numero9 - numero10;
                            Console.WriteLine("Resultado: " + total3);
                            break;
                        case 'c':
                            total3 = numero9 * numero10;
                            Console.WriteLine("Resultado: " + total3);
                            break;
                        case 'd':
                            if (numero10 != 0)
                            {
                                total3 = numero9 / numero10;
                                Console.WriteLine("Resultado: " + total3);
                            }
                            else
                            {
                                Console.WriteLine("División por cero no permitida.");
                            }
                            break;
                        case 'e':
                            total3 = numero9 % numero10;
                            Console.WriteLine("Resultado: " + total3);
                            break;
                        default:
                            Console.WriteLine("Opción no válida.");
                            break;
                    }

                    numero9 = 0;
                    numero10 = 0;
                    total3 = 0;
                }

            } while (opcion != 's');

            // 3. Crear un programa que simule dos operaciones básicas de un cajero
            string operador;
            int pin;
            double saldo = 3450.00;
            double retirar;

            Console.WriteLine("Ingrese el pin:");
            pin = int.Parse(Console.ReadLine());

            if (pin == 1234)
            {
                do
                {
                    Console.WriteLine("Menú de operaciones cajero:");
                    Console.WriteLine("a) Consulta de saldo");
                    Console.WriteLine("b) Retiro de dinero");
                    Console.WriteLine("c) Cancelar operación");
                    operador = Console.ReadLine();

                    if (operador == "a")
                    {
                        Console.WriteLine("Tu saldo es: " + saldo);
                    }
                    else if (operador == "b")
                    {
                        Console.WriteLine("Cantidad a retirar:");
                        retirar = double.Parse(Console.ReadLine());

                        if (saldo < retirar)
                        {
                            Console.WriteLine("Saldo insuficiente");
                        }
                        else
                        {
                            saldo -= retirar;
                            Console.WriteLine("Tu nuevo saldo es: " + saldo);
                        }
                    }

                } while (operador != "c");
            }
            else
            {
                Console.WriteLine("Pin incorrecto");
            }

            // 4. Simular un juego "Temple Run"
            Random rnd = new Random();
            int vida = 12;

            Console.WriteLine("Vida inicial: " + vida);

            while (vida > 0)
            {
                // deducir una vida
                vida--;
                Console.WriteLine("Costo de ciclo: " + vida);

                // castigo
                if (rnd.Next(0, 2) == 1)
                {
                    vida -= 3;
                    Console.WriteLine("Castigo: " + vida);
                }

                // premio
                if (rnd.Next(0, 2) == 1)
                {
                    vida += 3;
                    Console.WriteLine("Premio: " + vida);
                }

                Console.WriteLine("Vida después del ciclo: " + vida);
            }




