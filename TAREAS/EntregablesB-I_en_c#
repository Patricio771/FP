                Console.WriteLine("Ingrese el valor mínimo:");
                min = int.Parse(Console.ReadLine());

                Console.WriteLine("Ingrese el valor máximo:");
                max = int.Parse(Console.ReadLine());

                for (int i = min; i <= max; i++)
                {
                    Console.Write(i + " , ");
                }
                Console.WriteLine();

                // Ejercicio 5: Imprimir números de manera secuencial regresiva según un rango
                int min1, max1;
                Console.WriteLine("Ingrese el valor mínimo:");
                min1 = int.Parse(Console.ReadLine());

                Console.WriteLine("Ingrese el valor máximo:");
                max1 = int.Parse(Console.ReadLine());

                for (int i = max1; i >= min1; i--)
                {
                    Console.Write(i + " , ");
                }
                Console.WriteLine();


            //Practica G
          
                // 1. Arreglo con los nombres de los meses del año
                string[] nomMeses = { "enero", "febrero", "marzo", "abril", "mayo", "junio", "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre" };

                for (int i = 0; i < nomMeses.Length; i++)
                {
                    Console.Write(nomMeses[i] + ", ");
                }
                Console.WriteLine();

                // 2. Arreglo con los nombres de los planetas del sistema solar
                string[] nomPlanetas = { "mercurio", "venus", "tierra", "marte", "jupiter", "saturno", "urano", "neptuno" };

                foreach (string planeta in nomPlanetas)
                {
                    Console.WriteLine(planeta);
                }




            //Practica I
            
                // Declarar y inicializar una matriz bidimensional de 9x9
                int[,] matriz = {
                {0, 3, 0, 0, 0, 0, 0, 0, 0},
                {0, 2, 0, 9, 0, 6, 3, 0, 0},
                {0, 6, 0, 4, 0, 2, 0, 9, 0},
                {1, 0, 0, 0, 9, 0, 4, 0, 0},
                {0, 0, 8, 1, 0, 3, 5, 0, 0},
                {0, 0, 5, 0, 7, 0, 0, 0, 3},
                {0, 5, 0, 3, 0, 1, 0, 6, 0},
                {0, 0, 4, 6, 0, 7, 0, 3, 0},
                {0, 0, 0, 0, 0, 0, 0, 8, 0}
                };

                for (int i = 0; i < 9; i++)
                {
                    for (int j = 0; j < 9; j++)
                    {
                        Console.Write(matriz[i, j] + " ");
                    }
                    Console.WriteLine();
                }
        }
    }
