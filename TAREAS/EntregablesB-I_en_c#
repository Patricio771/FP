                // Ejercicio 1: Secuencia de los números naturales de 0 a 9
                for (int i = 0; i <= 9; i++)
                {
                    Console.Write(i + " , ");
                }
                Console.WriteLine();

                // Ejemplo regresivo
                for (int i = 9; i >= 0; i--)
                {
                    Console.Write(i + " , ");
                }
                Console.WriteLine();

                // Ejercicio 2: Contar los números de cero a 99
                for (int i = 1; i <= 99; i++)
